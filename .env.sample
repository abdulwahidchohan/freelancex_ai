# FreelanceX.AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment (development, production, testing)
FREELANCEX_ENV=development

# Kill switch for emergency system pause (true/false)
FREELANCEX_KILL_SWITCH=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type (sqlite, postgresql, mysql)
FREELANCEX_DB_TYPE=sqlite

# Database connection settings
FREELANCEX_DB_HOST=localhost
FREELANCEX_DB_PORT=5432
FREELANCEX_DB_NAME=freelancex
FREELANCEX_DB_USERNAME=your_db_username
FREELANCEX_DB_PASSWORD=your_db_password

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================

# API Gateway settings
FREELANCEX_API_HOST=0.0.0.0
FREELANCEX_API_PORT=8000
FREELANCEX_API_SECRET_KEY=your-secret-key-at-least-32-characters-long

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption key (auto-generated if not provided)
FREELANCEX_ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini Configuration
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here

# API Provider Selection
FREELANCEX_PRIMARY_API_PROVIDER=openai
FREELANCEX_FALLBACK_API_PROVIDER=gemini
FREELANCEX_ENABLE_API_FALLBACK=true

# Job Platform APIs
UPWORK_API_KEY=your-upwork-api-key
UPWORK_API_SECRET=your-upwork-api-secret
UPWORK_REDIRECT_URI=http://localhost:8000/auth/upwork/callback

FREELANCER_API_KEY=your-freelancer-api-key
LINKEDIN_API_KEY=your-linkedin-api-key

# Research and Search APIs
GOOGLE_SCHOLAR_API_KEY=your-google-scholar-api-key
SERPAPI_API_KEY=your-serpapi-api-key
BING_API_KEY=your-bing-api-key

# Social Media APIs
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# Email and Communication
GMAIL_CLIENT_SECRET_FILE=path/to/gmail-client-secret.json
GMAIL_TOKEN_FILE=path/to/gmail-token.json

# Voice and Audio
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# =============================================================================
# CACHING AND STORAGE
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Monitoring settings
FREELANCEX_MONITORING_ENABLED=true
FREELANCEX_ALERT_EMAIL=false

# Email alert configuration (if enabled)
FREELANCEX_ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
FREELANCEX_ALERT_EMAIL_SMTP_PORT=587
FREELANCEX_ALERT_EMAIL_USERNAME=your-email@gmail.com
FREELANCEX_ALERT_EMAIL_PASSWORD=your-app-password
FREELANCEX_ALERT_EMAIL_RECIPIENTS=admin@example.com,alerts@example.com

# =============================================================================
# AUTHENTICATION SERVICE
# =============================================================================

# Auth service URL (for user authentication)
AUTH_SERVICE_URL=http://127.0.0.1:8023

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# Test mode
TESTING=false
